{
    "gpu": "0",
    "logdir": "logs/log",
    "dataset": "semantic",
    "model": "model",
    "max_epoch": 201,

    "use_color": 1,
    "use_z_feature": 0,
    "data_path": "dataset/semantic_data/",
    "box_size": 10,

    "num_point": 8192,
    "batch_size": 32,
    "optimizer": "adam",
    "momentum": 0.9,
    "learning_rate": 0.001,
    "decay_step": 200000,
    "learning_rate_decay_rate": 0.7,
    "input_dropout": 0.875,
    "accept_rate": 1.0,
    
    "bn_init_decay": 0.5,
    "bn_decay_decay_rate": 0.5,
    "bn_decay_clip": 0.99,

    "l1_radius": 0.1,
    "l1_nsample": 32,
    "l1_npoint": 1024,

    "l2_radius": 0.3,
    "l2_nsample": 32,
    "l2_npoint": 256,

    "l3_radius": 0.5,
    "l3_nsample": 32,
    "l3_npoint": 64,

    "l4_radius": 1.0,
    "l4_nsample": 32,
    "l4_npoint": 16
}